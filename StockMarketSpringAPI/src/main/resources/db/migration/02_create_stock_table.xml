<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="2" author="dido">
        <createTable tableName="stocks">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP(6) WITHOUT TIME ZONE"/>
            <column name="market_capitalization" type="NUMERIC(20,2)"/>
            <column name="share_outstanding" type="NUMERIC(20,2)"/>
            <column name="company_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="stocks"
                baseColumnNames="company_id"
                referencedTableName="company"
                referencedColumnNames="id"
                constraintName="fk_stocks_company"/>
    </changeSet>

</databaseChangeLog>